@model TravelTutor.Models.VideoViewModel
@{
    ViewData["Title"] = "Travel Tutor";
}

<div class="if block dark">
    <div class="if container">
        <div class="if">
            <h2 class="if">Watch your personalized travel safety guide</h2>
            <p>Get ready to explore confidently! Watch this brief video packed with must-know safety tips for your trip.</p>
            @foreach (var video in Model.Videos)
            {
                <div class="mt-3">
                    <video
                        id="my-video"
                        class="video-js"
                        controls
                        preload="auto"
                        width="960"
                        poster="//vjs.zencdn.net/v/oceans.png"
                        data-setup="{}">
                        <source src="/Stream/Video?id=@video.Id" type="video/mp4"/>
                        <p class="vjs-no-js">
                            To view this video please enable JavaScript, and consider upgrading to a
                            web browser that
                            <a href="https://videojs.com/html5-video-support/" target="_blank">
                                supports HTML5 video
                            </a
                            >
                        </p>
                    </video>
                </div>
            }
        </div>
        <div class="if mt-4">
            <h3 class="if">Take a quiz and receive a discount</h3>
            <form asp-action="ToQuiz">
            <button class="if button primary" type="submit">Take a quiz</button>
            </form>
        </div>
    </div>
</div>